<script asp-location="Footer">
    $(document).ready(function () {
        $('#eu-cookie-bar-notification').show();

        $('#eu-cookie-ok').on('click', function () {
            $.ajax({
                cache: false,
                type: "POST",
                url: "@Url.RouteUrl("EuCookieLawAccept")",
                dataType: "json",
                success: function (data, textStatus, jqXHR) {
                    $(".eu-cookie-bar-notification-wrapper").hide();
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert('Cannot store value');
                }
            });
        });
        //for modal data
        //$("#eu-cookie-bar-notification").modal('show');
    });
</script>
<div class="eu-cookie-bar-notification-wrapper">
    <div id="eu-cookie-bar-notification" class="eu-cookie-bar-notification">
        <div class="content">
            <div class="text">@T("EUCookieLaw.Description2")</div>
            <div class="buttons-more">
                <button type="button" class="button-2" id="eu-cookie-ok">@T("Common.OK")</button>
                <a class="learn-more" href="@Url.RouteUrl("privacyinfo")">@T("EUCookieLaw.LearnMore")</a>
            </div>
        </div>
    </div>
</div>