@model SocialModel
<ul class="list networks panel-collapse collapse ">
	@if (!string.IsNullOrEmpty(Model.FacebookLink))
	{
		<li class="facebook"><a href="@Model.FacebookLink" target="_blank"><i class="fab fa-facebook-square px-1"></i> @T("Footer.FollowUs.Facebook")</a></li>
	}
	@if (!string.IsNullOrEmpty(Model.TwitterLink))
	{
		<li class="twitter"><a href="@Model.TwitterLink" target="_blank"><i class="fab fa-twitter-square px-1"></i> @T("Footer.FollowUs.Twitter")</a></li>
	}
	@if (Model.NewsEnabled)
	{
		<li class="rss"><a href="@Url.RouteUrl("NewsRSS", new {languageId = Model.WorkingLanguageId})"><i class="fas fa-rss-square px-1"></i> @T("Footer.FollowUs.RSS")</a></li>
	}
	@if (!string.IsNullOrEmpty(Model.YoutubeLink))
	{
		<li class="youtube"><a href="@Model.YoutubeLink" target="_blank"><i class="fab fa-youtube px-1"></i> @T("Footer.FollowUs.Youtube")</a></li>
	}
    @if (!string.IsNullOrEmpty(Model.InstagramLink))
    {
        <li class="instagram"><a href="@Model.InstagramLink" target="_blank" rel="noopener noreferrer"><i class="fab fa-instagram px-1"></i>@T("Footer.FollowUs.Instagram")</a></li>
    }
</ul>