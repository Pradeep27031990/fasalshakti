@inject Nop.Core.IWorkContext workContext

@{
    var supportRtl = (await workContext.GetWorkingLanguageAsync()).Rtl;
    NopHtml.AppendScriptParts(ResourceLocation.Footer, "/Plugins/NopStation.Plugin.Widgets.AnywhereSlider/Content/js/nopstation.anywhereslider.js");

    if (supportRtl)
    {
        NopHtml.AppendCssFileParts("/Plugins/NopStation.Plugin.Widgets.AnywhereSlider/Themes/Berry-pharmacy/Content/css/styles.rtl.css", string.Empty);
    }
    else
    {
        NopHtml.AppendCssFileParts("/Plugins/NopStation.Plugin.Widgets.AnywhereSlider/Themes/Berry-pharmacy/Content/css/styles.css", string.Empty);
    }

}

<script asp-location="Footer">
    var sliderdata = {};
    sliderdata.AnywereSliderFailure = '@T("NopStation.AnywhereSlider.LoadingFailed")';

    $(document).ready(function () {
        AnywereSlider.init('@Url.RouteUrl("AnywhereSlider")', '.slider-container', '.v .loader', sliderdata);
    });
</script>